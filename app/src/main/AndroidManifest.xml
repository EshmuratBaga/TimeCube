<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cube.time.com.timecube">

    <application
        android:name=".utils.TimeCubeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.reg.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.LoginTheme" />
        <activity
            android:name=".screen.settings_cube.CubeSettingsActivity"
            android:label="@string/title_activity_cube_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".screen.scan.ScanActivity"
            android:label="@string/title_activity_scan_activity" />
        <activity
            android:name=".screen.main.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".screen.bottom.TimeActivity"
            android:label="@string/title_activity_time" />
        <activity
            android:name=".screen.statistic.StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>